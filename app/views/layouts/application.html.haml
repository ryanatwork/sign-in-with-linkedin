!!! 5
%html
  %head
  %title SignInWithLinkedin
  %link{:rel => "stylesheet", :href => "http://twitter.github.com/bootstrap/assets/css/bootstrap-1.2.0.min.css"}
  = stylesheet_link_tag    "application"
  = javascript_include_tag "application"
  = csrf_meta_tags

  %body
    - if flash[:notice]
      %p{:id => "notice"}
        = flash[:notice]
    - if flash[:error]
      %p{:id => "error"}
        = flash[:error]
    .container
      = yield
